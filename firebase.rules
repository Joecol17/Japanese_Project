rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Blackjack scores: allow public reads; writes must go through server.
    match /blackjack_scores/{docId} {
      allow read: if true;

      // Disallow all client writes (use Admin SDK in Cloud Functions)
      allow write: if false;
    }

    // Slot machine scores: allow public reads; writes must go through server.
    match /scores/{docId} {
      allow read: if true;

      // Disallow all client writes (use server-side endpoint)
      allow write: if false;
    }

    // Wallets: clients should not be able to write directly to wallets documents.
    match /wallets/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // disallow client-side create/update/delete; only server (Admin SDK / Cloud Functions) should modify wallets
      allow write: if false;
    }

    // Fallback: deny everything else by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
